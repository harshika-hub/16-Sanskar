  <!-- Add Module Start -->
  <div class="modal fade" id="addDataModal" tabindex="-1" aria-labelledby="addDataModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content" id="form">
        <div class="modal-header">
          <h1 class="modal-title fs-5" style="color: #f47c00;" id="addDataModal">Add Product</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <form onsubmit="return validateProductForm()" action="/vendor_registration/addVendorproduct" method="post" enctype="multipart/form-data">
            <div class="row">
              

            <div class="form-group col-6">
              <input type="text" class="form-control" id="productId"  name="productId"  placeholder="Enter product Id"  
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              <small id="error-msg" class="error-message" style="color: red;"></small>
            </div>
            <div class="form-group col-6">
              <input type="text" class="form-control" id="productName" name="productName" placeholder="Enter Product name"  
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              <small id="error-msg" class="error-message" style="color: red;"></small>
            </div>
          </div>
          <div class="row">

            <div class="form-group mt-2 col-6">
              <input type="text" class="form-control" id="productPrice" name="productPrice" placeholder="Enter Product Price"  
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              <small id="error-msg" class="error-message" style="color: red;"></small>
            </div>
            <div class="form-group mt-2 col-6">
              <input type="text" class="form-control" id="productPerqty" name="productPerqty" placeholder="Enter Per Product Quantity"  
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              <small id="price-error-msg" class="error-message" style="color: red;"></small>
            </div>
            </div>
            <div class="form-group mt-2">
              <input type="text" class="form-control" id="productTotalqty" name="productTotalqty" placeholder="Enter Product Total Quantity"  
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              <small id="price-error-msg" class="error-message" style="color: red;"></small>
            </div>
            <div class="form-group mt-2">
              <input type="text" class="form-control" id="productBrandname" name="productBrandname" placeholder="Enter Product Brand Name"  
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              <small id="error-msg" class="error-message" style="color: red;"></small>
            </div>
            <div class="form-group mt-2">
              <input type="text" class="form-control" id="productCategory" name="productCategory" placeholder="Enter Product Category"  
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              <small id="error-msg" class="error-message" style="color: red;"></small>
            </div>
            <div class="row">
            <div class="form-group mt-2 col-6">
              <small>Manufacturing Date</small>
              <input type="date" class="form-control" id="productMfd" name="productMfd" placeholder="Enter Product Manufacturing Date"  
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              <small id="error-msg" class="error-message" style="color: red;"></small>
            </div>
            <div class="form-group mt-2 col-6">
              <small>Expiry Date</small>

              <input type="date" class="form-control" id="productExpirydate" name="productExpirydate" placeholder="Enter Product Expiry Date"  
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              <small id="error-msg" class="error-message" style="color: red;"></small>
            </div>
          </div>
           
            <div class="form-group mt-2">
              <textarea class="form-control h-25" id="productDescription" name="productDescription"  placeholder="Enter Product Description"  
                rows="3" ></textarea>
              <small id="error-msg" class="error-message" style="color: red;"></small>
            </div>
            <div class="form-group mt-2">
              <input type="file" class="form-control" id="productImage" name="productImage">
              <small id="image-error-msg" class="error-message" style="color: red;"></small>
            </div>

          
            <button type="submit"  style="background-color: #f47c00;" class="btn submitButton w-100" id="submitdata">Add</button>
          </form>

        </div>
        <div class="modal-footer">

       
        </div>
      </div>
    </div>
