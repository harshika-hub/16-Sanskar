  <%item.forEach((data)=>{%>

        <div class='row gx-2'>
          <div class='col-4'>
            <div class='p-3'>
              <div class='card d-flex card-all'>
                <div class='card-body' style=" height: 11rem; width: 16rem;">
                  <h5 class='card-title text-center'><strong>Item No.-</strong> <%=data.vproduct_id%></h5>
                  <img src="/uploads/<%=data.vproduct_imag%>" class="card-img-top" alt='Image' style=" height: 10rem; width: 14rem;">
                </div>
                <ul class='list-group list-group-flush'>
                  <li class='list-group-item'><strong>Product -</strong><%=data.vproduct_name%> </li>
                  <li class='list-group-item 'style=" height: 10vh;"><strong>Description -</strong> <%=data.vproduct_description%> </li>
