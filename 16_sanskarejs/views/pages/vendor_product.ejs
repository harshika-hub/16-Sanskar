  <!-- Edit Module Start -->
  <div class="modal fade" id="exampleModal-2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content" id="form">
        <div class="modal-header">
          <h1 class="modal-title fs-5" style="color: #f47c00;" id="exampleModalLabel">Update Product Data</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/vendor_registration/updateVendorproduct/<%=edit._id%>/<%=edit.vproduct_imag%>" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <div id="image-div"></div>
              <label for="exampleFormControlInput1" style="color: #f47c00;">Product Id -</label>
              <input type="text" class="form-control" id="id-edit" aria-label="Sizing example input" value="<%=edit.vproduct_id%>"
                aria-describedby="inputGroup-sizing-default" readonly>
            </div>
            <div class="form-group mt-2">
              <label for="exampleFormControlSelect1" style="color: #f47c00;">Name -</label>
              <input type="text" class="form-control" id="name-edit" placeholder="Enter Product name" name="productName"  value="<%=edit.vproduct_name%>"
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="form-group mt-2">
              <label for="exampleFormControlSelect1" style="color: #f47c00;">Price -</label>
              <input type="text" class="form-control" id="price-edit" placeholder="Enter Product Price" name="productPrice" value="<%=edit.vproduct_price%>"
                aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="form-group mt-2">
              <label for="exampleFormControlTextarea1" style="color: #f47c00;">Description -</label>
              <textarea class="form-control h-25" id="description-edit" placeholder="Enter Description of Product" name="productDescription"
                rows="3">"<%=edit.vproduct_description%></textarea>
            </div>
            <div class="form-group mt-2">
              <img src="/uploads/<%=edit.vproduct_imag%>" alt="" style="width: 80%; height:25vh;"><br>
              <label for="exampleFormControlSelect1" style="color: #f47c00;">Product - Image -</label>
              <input type="file" class="form-control" id="productImages" name="productImage">
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-success w-100" style="background-color: #f47c00; border: none;"
                id="update">Update</button>
            </div>
          </form>
        </div>
      
      </div>
    </div>
  </div>
  <!-- Edit Module End -->

