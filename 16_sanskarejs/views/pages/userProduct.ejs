<div class="container " style="margin-top: 15vh;">
    <h2 align="center" class="mt-5">Products</h2>
    <div class="row row-cols-1 row-cols-md-3 mt-5">

        <!-- Product 1 -->
        <%item.forEach((data)=>{ %>
        <div class="col mb-4">
            <div class="card " >
                <img src="/uploads/<%=data.vproduct_imag%>" class="card-img-top" alt="Product 1" style=" height: 20rem; width: 26rem;">
                <div class="card-body">
                    <h5 class="card-title">Product Id:- <%=data.vproduct_id%></h5>
                    <p class="card-text">Product Name:- <%=data.vproduct_name%></p>
                    <p class="card-text">Product Price:- <%= data.vproduct_price%></p>
                    <p class="card-text">Product Description:- <%= data.vproduct_description%></p>
                    <button class="btn" style="background-color: #f47c00;">Add to Cart</button>
                </div>
            </div>
        </div>
        <%} )%>

